//counting no. of zeroes in given data USING FOR LOOP
//main code
module jeetuga(a,b);
  input [7:0]a;
  output reg [4:0]b;
  integer i;
  initial
    b=0;
  
  always @(a) begin
    b=0;
     for(i=0;i<=7;i=i+1)
      begin
        if(a[i]==0)
           b=b+1;
       end
    $display("b=%0d",b); 
      
  end
  
endmodule
